<div class="container">
<div class="docs row">
  <div class="three columns">
    <div class="side-menu">
      <ul>
        {{#each tableOfContents key="route" as |entry|}}
        <li>
          {{#link-to entry.route}}{{entry.title}}{{/link-to}}

          {{#if entry.children}}
          <ul>
            {{#each entry.children key="route" as |child|}}
            <li>
              {{child.title}}
            </li>
            {{/each}}
          </ul>
          {{/if}}
        </li>
        {{/each}}
      </ul>
    </div>

  </div>
  <div class="nine columns">
    {{outlet}}
  </div>
</div>
</div>
