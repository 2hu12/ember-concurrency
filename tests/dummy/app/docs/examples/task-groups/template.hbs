<h3>Task Groups (alpha)</h3>

<h3>Live Example</h3>

<h4>State of everything: {{everything.state}}</h4>

<button onclick={{cancel-all everything}} class={{if everything.isRunning 'button-primary'}}>
  Cancel Everything
</button>

{{! BEGIN-SNIPPET task-groups-template }}

<table class="u-full-width">
  <thead>
    <tr>
      <th>Perform</th>
      <th>State</th>
      <th>Group</th>
      <th>Group State</th>
    </tr>
  </thead>
  <tbody>
    {{#each tasks as |task|}}
      <tr>
        <td>
          <button onclick={{perform task}} class={{if task.isIdle 'button-primary'}}>
            {{task.name}}
          </button>
        </td>
        <td>{{task.state}}</td>
        <td>{{task.group.name}}</td>
        <td>{{task.group.state}}</td>
      </tr>
    {{/each}}
  </tbody>
</table>
{{! END-SNIPPET }}


